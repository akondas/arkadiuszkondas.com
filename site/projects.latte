---
layout: "_layouts/default.latte"
title: Projects
---

{block content}
{foreach $projects['serious'] as $project}
	{ifset $project['image']}
		{include "_snippets/layout/image.latte", src => $project['image'], alt => $project['name']}
	{/ifset}

	<h2><a href="{$project['repository']}">{$project['name']}</a></h2>
	<h3>{$project['title']}</h3>
	<p>{$project['description']}</p>
	<p><a href="{$project['repository']}" class="link--more">Github</a><p>
{/foreach}
{/block}
